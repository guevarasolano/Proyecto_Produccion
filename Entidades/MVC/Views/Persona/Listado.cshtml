@model IEnumerable<CapaEntidades.Persona>
<html>
<head>
    <title>Fructa CR S.A</title>
    @*<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.2/css/bootstrap.min.css" rel="stylesheet" />*@
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/img/flsf.png" type="image/x-icon" rel="shortcut icon" />
    <script src="https://code.jquery.com/jquery-3.3.1.js"
            integrity="sha256-2Kok7MbOyxpgUVvAk/HJ2jigOSYS2auK4Pfzbm7uH60="
            crossorigin="anonymous"></script>
    @*<script src="~script/jquery-1.10.2.min.js"></script>
        <script src="~script/jquery-validate.min.js"></script>
        <script src="~script/jquery-validate.unobtrusive.min.js"></script>*@
</head>

<body style="margin-top: 30px">
    <form class="form-horizontal" id="form1">
        <div class="container">
            <div class="row">
                <div class="well well -sm">
                    <fieldset>
                        <table class="table table-hover" style="font-size: small">
                            <thead class="text-primary">
                                <tr>
                                    <th scope="row">
                                        @Html.DisplayNameFor(model => model.Id_Persona)
                                    </th>

                                    <th scope="row">
                                        @Html.DisplayNameFor(model => model.Nombre)
                                    </th>

                                    <th scope="row">
                                        @Html.DisplayNameFor(model => model.Primer_Apellido)
                                    </th>

                                    <th scope="row">
                                        @Html.DisplayNameFor(model => model.Segundo_Apellido)
                                    </th>

                                    <th scope="row">
                                        @Html.DisplayNameFor(model => model.Sexo)
                                    </th>

                                    <th scope="row">
                                        @Html.DisplayNameFor(model => model.Estado)
                                    </th>

                                    <th scope="row">
                                        @Html.DisplayNameFor(model => model.Usuario_Ingreso)
                                    </th>

                                    <th scope="row">
                                        @Html.DisplayNameFor(model => model.Fecha_Ingreso)
                                    </th>

                                    <th scope="row">
                                        @Html.DisplayNameFor(model => model.Usuario_Modificacion)
                                    </th>

                                    <th scope="row">
                                        @Html.DisplayNameFor(model => model.Fecha_Modificacion)
                                    </th>
                                </tr>
                            </thead>

                            @foreach (var item in Model)
                            {

                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Id_Persona)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Nombre)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Primer_Apellido)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Segundo_Apellido)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Sexo)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Estado)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Usuario_Ingreso)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Fecha_Ingreso)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Usuario_Modificacion)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Fecha_Modificacion)
                                </td>

                                <td>
                                    @Html.ActionLink("Modificar", "modificarPersona", new { id = item.Id_Persona }) |
                                    @Html.ActionLink("Eliminar", "eliminarPersona", new { id = item.Id_Persona }, new { onclick = "return confirm('¿Está seguro de borrar el registro?'" })

                                </td>
                            </tr>
                            }

                        </table>
                        <span>
                            @Html.ActionLink("Nuevo Registro", "agregarPersona", "Persona", null, new { @class = "btn btn-primary btn.large" })
                            @Html.ActionLink("Regresar", "Menu", "Menu", null, new { @class = "btn btn-primary btn-large" })
                        </span>
                    </fieldset>
                </div>
            </div>
        </div>
    </form>

    <footer style="text-align: center; background-color: #006bff; color: #ffffff">Fructa CR S.A</footer>

</body>

</html>