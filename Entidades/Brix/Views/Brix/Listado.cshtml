@model IEnumerable<Brix.Models.EBrix>
<html>
<head>
    <title>Listado General del Brix</title>
    @*<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.2/css/bootstrap.min.css" rel="stylesheet" />*@
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.3.1.js"
            integrity="sha256-2Kok7MbOyxpgUVvAk/HJ2jigOSYS2auK4Pfzbm7uH60="
            crossorigin="anonymous"></script>
    @*<script src="~script/jquery-1.10.2.min.js"></script>
    <script src="~script/jquery-validate.min.js"></script>
    <script src="~script/jquery-validate.unobtrusive.min.js"></script>*@
</head>
<body style="margin-top: 10px">
    <form class="form-horizontal" id="form1">
        <div class="container">
            <div class="row">
                <div class="well well -sm">
                    <fieldset>
                        <table class="table table-hover" style="font-size: small">
                            <thead class="text-primary">
                                <tr>
                                    <th scope="row">
                                        @Html.DisplayNameFor(model => model.Id_Brix)
                                    </th>

                                    <th scope="row">
                                        @Html.DisplayNameFor(model => model.Bris)
                                    </th>

                                    <th scope="row">
                                        @Html.DisplayNameFor(model => model.Densidad)
                                    </th>

                                    <th scope="row">
                                        @Html.DisplayNameFor(model => model.Estado)
                                    </th>

                                    <th scope="row">
                                        @Html.DisplayNameFor(model => model.Usuario_Ingreso)
                                    </th>

                                    <th scope="row">
                                        @Html.DisplayNameFor(model => model.Fecha_Ingreso)
                                    </th>

                                    <th scope="row">
                                        @Html.DisplayNameFor(model => model.Usuario_Modificacion)
                                    </th>

                                    <th scope="row">
                                        @Html.DisplayNameFor(model => model.Fecha_Modificacion)
                                    </th>
                                </tr>
                            </thead>

                            @foreach (var item in Model)
                            {

                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Id_Brix)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Bris)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Densidad)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Estado)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Usuario_Ingreso)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Fecha_Ingreso)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Usuario_Modificacion)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Fecha_Modificacion)
                                </td>

                                <td>
                                    @Html.ActionLink("Modificar", "modificarBrix", new { id = item.Id_Brix }) |
                                    @Html.ActionLink("Eliminar", "eliminarBrix", new { id = item.Id_Brix },
                                   new { onclick = "return confirm('¿Está seguro de borrar el registro?'" })

                                </td>
                            </tr>
                            }

                        </table>
                        <span>
                            @Html.ActionLink("Brix nuevo", "agregarBrix", "", null,
                           new {  @class = "btn btn-primary btn.large"})
                        </span>
                    </fieldset>
                </div>
            </div>
        </div>
    </form>
</body>
</html>