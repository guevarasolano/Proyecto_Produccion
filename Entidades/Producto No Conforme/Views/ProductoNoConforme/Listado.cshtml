                                        </th>

                                        <th scope="row">
                                            @Html.DisplayNameFor(model => model.Tipo_Producto)
                                        </th>

                                        <th scope="row">
                                            @Html.DisplayNameFor(model => model.Fecha_Bloqueo)
                                        </th>

                                        <th scope="row">
