                                        </th>

                                        <th scope="row">
                                            @Html.DisplayNameFor(model => model.Responsable)
                                        </th>

                                        <th scope="row">
                                            @Html.DisplayNameFor(model => model.Llenadora)
                                        </th>

                                        <th scope="row">
