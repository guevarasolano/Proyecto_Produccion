                                    </td>

                                    <td>
                                        @Html.ActionLink("Modificar", "modificarProductoNoConforme", new { id = item.Id_Producto_No_Conforme }) |
                                        @Html.ActionLink("Eliminar", "eliminarProductoNoConforme", new { id = item.Id_Producto_No_Conforme },
