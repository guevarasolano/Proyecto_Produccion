                                        </th>

                                        <th scope="row">
                                            @Html.DisplayNameFor(model => model.Fecha_Modificacion)
                                        </th>
                                    </tr>
                                </thead>

                                @foreach (var item in Model){

                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Id_Producto_No_Conforme)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.FK_Id_Articulo_SAP)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Lote_Producto)
