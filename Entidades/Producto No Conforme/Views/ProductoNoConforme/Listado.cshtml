                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Naturaleza_Bloqueo)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Hallazgo)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Causa)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Codigo_Bloqueo)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Estado_Unidad)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Disposicion_Recomendada)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Estado)
                                    </td>

                                    <td>
