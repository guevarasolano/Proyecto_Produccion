                                        <th scope="row">
                                            @Html.DisplayNameFor(model => model.Codigo_Bloqueo)
                                        </th>

                                        <th scope="row">
                                            @Html.DisplayNameFor(model => model.Estado_Unidad)
                                        </th>

                                        <th scope="row">
                                            @Html.DisplayNameFor(model => model.Disposicion_Recomendada)
                                        </th>

                                        <th scope="row">
                                            @Html.DisplayNameFor(model => model.Estado)
                                        </th>

                                        <th scope="row">
                                            @Html.DisplayNameFor(model => model.Usuario_Ingreso)
                                        </th>

                                        <th scope="row">
                                            @Html.DisplayNameFor(model => model.Fecha_Ingreso)
                                        </th>

                                        <th scope="row">
